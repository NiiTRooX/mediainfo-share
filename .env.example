# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# SSL Configuration
SSL_CERT_PATH=./cert.pem
SSL_KEY_PATH=./key.pem
USE_SSL=false

# Upload Configuration
UPLOAD_FOLDER=static/media
MAX_CONTENT_LENGTH=1048576  # 1MiB in bytes
ALLOWED_EXTENSIONS=txt

# Encryption
# Generate these keys using: python -c "import secrets; print(secrets.token_hex(16))"
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Donation Addresses (Optional)
BTC_ADDRESS=your_btc_address_here
ETH_ADDRESS=your_eth_address_here
USDC_ADDRESS=your_usdc_address_here
LTC_ADDRESS=your_ltc_address_here 